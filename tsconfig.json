{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    
    // Diretório de saída
    "outDir": "./dist",
    
    // Mantém a estrutura de pastas do src no dist
    "rootDir": "./src",

    // Gera arquivos de declaração .d.ts para uso como biblioteca (opcional)
    "declaration": true,

    // Remove comentários do código compilado (opcional)
    "removeComments": true
  },

  // Inclui apenas os arquivos da pasta src
  "include": ["src/**/*"],

  // Exclui arquivos desnecessários
  "exclude": ["node_modules", "dist"]
}